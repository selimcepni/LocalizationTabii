<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:syncfusion="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
             x:Class="LocalizationTabii.Pages.Settings.ApiKeysView"
             x:Name="ApiKeysViewControl">
    <Frame BackgroundColor="{AppThemeBinding Light={DynamicResource BackgroundColorLight}, Dark={DynamicResource BackgroundColorDark}}"
           BorderColor="{AppThemeBinding Light={DynamicResource BorderColorLight}, Dark={DynamicResource BorderColorDark}}"
           CornerRadius="10"
           HasShadow="True">
        <StackLayout Spacing="24">
            <Label Text="API Keys"
                   FontSize="24"
                   FontFamily="Roboto-Medium"
                   HorizontalOptions="Center"
                   Margin="0,0,0,20"/>
            <!-- OpenAI -->
            <Label Text="OpenAI API Key" FontSize="16" FontFamily="Roboto-Regular"/>
            <syncfusion:SfTextInputLayout Hint="Enter your OpenAI API Key">
                <Entry x:Name="OpenAiApiKeyEntry"/>
            </syncfusion:SfTextInputLayout>
            <!-- Anthropic -->
            <Label Text="Anthropic API Key" FontSize="16" FontFamily="Roboto-Regular"/>
            <syncfusion:SfTextInputLayout Hint="Enter your Anthropic API Key">
                <Entry x:Name="AnthropicApiKeyEntry"/>
            </syncfusion:SfTextInputLayout>
            <!-- Google -->
            <Label Text="Google API Key" FontSize="16" FontFamily="Roboto-Regular"/>
            <syncfusion:SfTextInputLayout Hint="Enter your Google AI Studio API Key">
                <Entry x:Name="GoogleApiKeyEntry"/>
            </syncfusion:SfTextInputLayout>
        </StackLayout>
    </Frame>
</ContentView> 