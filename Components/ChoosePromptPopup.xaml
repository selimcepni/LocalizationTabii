<?xml version="1.0" encoding="utf-8" ?>
<popup:SfPopup
       x:Class="LocalizationTabii.Components.ChoosePromptPopup"
       xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
       xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
       xmlns:inputs="clr-namespace:Syncfusion.Maui.Inputs;assembly=Syncfusion.Maui.Inputs"
       xmlns:popup="clr-namespace:Syncfusion.Maui.Popup;assembly=Syncfusion.Maui.Popup"
       xmlns:syncfusion="clr-namespace:Syncfusion.Maui.ListView;assembly=Syncfusion.Maui.ListView"
       x:Name="choosePromptPopup"
       HeaderHeight="60"
       HeaderTitle="Prompt SeÃ§imi"
       HeightRequest="700"
       IsOpen="{Binding IsPopupOpen}"
       ShowCloseButton="True"
       ShowHeader="True"
       StaysOpen="False"
       WidthRequest="900">

       <popup:SfPopup.PopupStyle>
              <popup:PopupStyle HeaderTextColor="{AppThemeBinding Light={StaticResource DarkBackground}, Dark={StaticResource LightBackground}}" PopupBackground="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" />
       </popup:SfPopup.PopupStyle>

       <popup:SfPopup.ContentTemplate>
              <DataTemplate>
                     <Grid Padding="20" RowDefinitions="Auto,Auto,*,Auto,Auto">

                            <!--  Loading Indicator  -->
                            <ActivityIndicator
                                   Grid.Row="0"
                                   HeightRequest="40"
                                   IsRunning="{Binding IsLoading}"
                                   IsVisible="{Binding IsLoading}"
                                   Color="#007ACC" />

                            <!--  Arama ve Filtre AlanÄ±  -->
                            <Grid
                                   Grid.Row="1"
                                   Margin="0,10"
                                   ColumnDefinitions="*,200,200"
                                   RowDefinitions="Auto,Auto">

                                   <!--  Arama Ã‡ubuÄŸu  -->
                                   <SearchBar
                                          x:Name="searchBar"
                                          Grid.Row="0"
                                          Grid.Column="0"
                                          Margin="0,0,5,0"
                                          BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                                            Dark={StaticResource DarkBackground}}"
                                          Placeholder="Prompt ara..."
                                          PlaceholderColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                                             Dark={StaticResource LightOnDarkBackground}}"
                                          SearchCommand="{Binding SearchCommand}"
                                          SearchCommandParameter="{Binding Source={x:Reference searchBar}, Path=Text}"
                                          Text="{Binding SearchText, Mode=TwoWay}"
                                          TextChanged="OnSearchTextChanged"
                                          TextColor="{AppThemeBinding Light=Black,
                                                                      Dark=White}"
                                                                      
                                           />

                                   <!--  Kategori Filtresi  -->
                                   <inputs:SfComboBox
                                          x:Name="categoryComboBox"
                                          Grid.Row="0"
                                          Grid.Column="1"
                                          Margin="5,0"
                                          BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                                            Dark={StaticResource DarkBackground}}"
                                          DisplayMemberPath="Name"
                                          DropDownBackground="{AppThemeBinding Light={StaticResource LightBackground},
                                                                                    Dark={StaticResource DarkBackground}}"
                                          DropDownStroke="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}"     
                                          DropDownItemTextColor="{AppThemeBinding Light={StaticResource DarkBackground}, Dark={StaticResource LightBackground}}" 
                                          ItemsSource="{Binding Categories}"
                                          Placeholder="Kategori SeÃ§"
                                          PlaceholderColor="{AppThemeBinding Light={StaticResource LightOnDarkBackground},
                                                                             Dark={StaticResource DarkOnLightBackground}}"
                                          SelectedItem="{Binding SelectedCategory}"
                                          SelectionChanged="OnCategorySelectionChanged"
                                          TextColor="{AppThemeBinding Light=Black,
                                                                      Dark=White}"
                                          Stroke="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" />

                                   <!--  Dil Filtresi  -->
                                   <inputs:SfComboBox
                                          x:Name="languageComboBox"
                                          Grid.Row="0"
                                          Grid.Column="2"
                                          Margin="5,0,0,0"
                                          BackgroundColor="{AppThemeBinding Light={StaticResource LightBackground},
                                                                            Dark={StaticResource DarkBackground}}"
                                          DisplayMemberPath="Name"
                                          DropDownBackground="{AppThemeBinding Light={StaticResource LightBackground},
                                                                                    Dark={StaticResource DarkBackground}}"
                                          DropDownStroke="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}"     
                                          DropDownItemTextColor="{AppThemeBinding Light={StaticResource DarkBackground}, Dark={StaticResource LightBackground}}"                                    
                                          ItemsSource="{Binding Languages}"
                                          Placeholder="Dil SeÃ§"
                                          PlaceholderColor="{AppThemeBinding Light={StaticResource DarkOnLightBackground},
                                                                             Dark={StaticResource LightOnDarkBackground}}"
                                          SelectedItem="{Binding SelectedLanguage}"
                                          SelectionChanged="OnLanguageSelectionChanged"

                                          TextColor="{AppThemeBinding Light=Black,
                                                                      Dark=White}"
                                          Stroke="{AppThemeBinding Light={StaticResource LightBackground}, Dark={StaticResource DarkBackground}}" />

                                   <!--  Filtre Temizleme Butonu  -->
                                   <Button
                                          Grid.Row="1"
                                          Grid.ColumnSpan="3"
                                          Margin="0,5,0,0"
                                          BackgroundColor="{AppThemeBinding Light={StaticResource LightSecondaryBackground},
                                                                            Dark={StaticResource DarkSecondaryBackground}}"
                                          Command="{Binding ClearFiltersCommand}"
                                          FontSize="12"
                                          HeightRequest="35"
                                          IsVisible="{Binding HasActiveFilters}"
                                          Text="Filtreleri Temizle"
                                          TextColor="White" />

                            </Grid>

                            <!--  Syncfusion ListView  -->
                            <syncfusion:SfListView
                                   x:Name="promptListView"
                                   Grid.Row="2"
                                   AutoFitMode="Height"
                                   ItemSize="120"
                                   ItemsSource="{Binding FilteredPrompts}"
                                   SelectionChanged="OnSelectionChanged"
                                   SelectionGesture="Tap"
                                   SelectionMode="Single">

                                   <syncfusion:SfListView.ItemTemplate>
                                          <DataTemplate>
                                                 <Grid
                                                        Padding="15"
                                                        ColumnDefinitions="*,Auto"
                                                        RowDefinitions="Auto,Auto,Auto,Auto">

                                                        <!--  Title  -->
                                                        <Label
                                                               Grid.Row="0"
                                                               Grid.Column="0"
                                                               FontAttributes="Bold"
                                                               FontSize="18"
                                                               LineBreakMode="TailTruncation"
                                                               Text="{Binding Title}"
                                                               TextColor="#2C3E50" />


                                                        <!--  Category and Language  -->
                                                        <StackLayout
                                                               Grid.Row="1"
                                                               Grid.ColumnSpan="2"
                                                               Margin="0,5,0,0"
                                                               Orientation="Horizontal"
                                                               Spacing="10">

                                                               <Frame
                                                                      Padding="8,4"
                                                                      BackgroundColor="#3498DB"
                                                                      CornerRadius="12"
                                                                      HasShadow="False">
                                                                      <Label
                                                                             FontAttributes="Bold"
                                                                             FontSize="12"
                                                                             Text="{Binding Category}"
                                                                             TextColor="White" />
                                                               </Frame>

                                                               <Frame
                                                                      Padding="8,4"
                                                                      BackgroundColor="#27AE60"
                                                                      CornerRadius="12"
                                                                      HasShadow="False">
                                                                      <Label
                                                                             FontAttributes="Bold"
                                                                             FontSize="12"
                                                                             Text="{Binding Language}"
                                                                             TextColor="White" />
                                                               </Frame>

                                                        </StackLayout>

                                                        <!--  Content Preview  -->
                                                        <Label
                                                               Grid.Row="2"
                                                               Grid.ColumnSpan="2"
                                                               Margin="0,8,0,0"
                                                               FontSize="14"
                                                               LineBreakMode="TailTruncation"
                                                               MaxLines="2"
                                                               Text="{Binding Content}"
                                                               TextColor="#7F8C8D" />

                                                        <!--  Dates  -->
                                                        <StackLayout
                                                               Grid.Row="3"
                                                               Grid.ColumnSpan="2"
                                                               Margin="0,8,0,0"
                                                               Orientation="Horizontal"
                                                               Spacing="15">

                                                               <!--  Created Date with Icon  -->
                                                               <StackLayout Orientation="Horizontal" Spacing="5">
                                                                      <Image
                                                                             HeightRequest="14"
                                                                             Source="{StaticResource IconCalendarAdd24Regular}"
                                                                             VerticalOptions="Center"
                                                                             WidthRequest="14" />
                                                                      <Label
                                                                             FontSize="12"
                                                                             Text="{Binding CreatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                                                                             TextColor="#95A5A6" />
                                                               </StackLayout>

                                                               <!--  Updated Date with Icon  -->
                                                               <StackLayout Orientation="Horizontal" Spacing="5">
                                                                      <Image
                                                                             HeightRequest="14"
                                                                             Source="{StaticResource IconCalendarEdit24Regular}"
                                                                             VerticalOptions="Center"
                                                                             WidthRequest="14" />
                                                                      <Label
                                                                             FontSize="12"
                                                                             Text="{Binding UpdatedAt, StringFormat='{0:dd/MM/yyyy}'}"
                                                                             TextColor="#95A5A6" />
                                                               </StackLayout>

                                                        </StackLayout>

                                                 </Grid>
                                          </DataTemplate>
                                   </syncfusion:SfListView.ItemTemplate>

                            </syncfusion:SfListView>

                            <!--  Empty View  -->
                            <StackLayout
                                   Grid.Row="2"
                                   HorizontalOptions="Center"
                                   IsVisible="{Binding IsEmpty}"
                                   Spacing="20"
                                   VerticalOptions="Center">

                                   <Label
                                          FontSize="48"
                                          HorizontalOptions="Center"
                                          Text="ðŸ“" />

                                   <Label
                                          FontAttributes="Bold"
                                          FontSize="18"
                                          HorizontalOptions="Center"
                                          Text="{Binding EmptyMessage}"
                                          TextColor="#7F8C8D" />

                                   <Label
                                          FontSize="14"
                                          HorizontalOptions="Center"
                                          HorizontalTextAlignment="Center"
                                          Text="FarklÄ± filtre kriterleri deneyebilir veya yeni prompt ekleyebilirsiniz"
                                          TextColor="#BDC3C7" />

                            </StackLayout>

                            <!--  Bottom Info  -->
                            <StackLayout
                                   Grid.Row="3"
                                   Margin="0,15,0,0"
                                   HorizontalOptions="Center"
                                   Orientation="Horizontal"
                                   Spacing="20">

                                   <Label
                                          FontSize="14"
                                          Text="{Binding FilteredPrompts.Count, StringFormat='GÃ¶sterilen: {0} prompt'}"
                                          TextColor="#7F8C8D" />

                                   <Label
                                          FontSize="14"
                                          Text="{Binding TotalPrompts, StringFormat='Toplam: {0} prompt'}"
                                          TextColor="#7F8C8D" />

                                   <Label
                                          FontAttributes="Italic"
                                          FontSize="14"
                                          Text="SeÃ§mek iÃ§in tÄ±klayÄ±n"
                                          TextColor="#3498DB" />

                            </StackLayout>

                     </Grid>
              </DataTemplate>
       </popup:SfPopup.ContentTemplate>
</popup:SfPopup>
