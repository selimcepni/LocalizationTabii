<?xml version="1.0" encoding="utf-8" ?>
<ContentView 
    x:Class="LocalizationTabii.Components.ChoosePromptComponent"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:buttons="clr-namespace:Syncfusion.Maui.Buttons;assembly=Syncfusion.Maui.Buttons"
    xmlns:core="clr-namespace:Syncfusion.Maui.Core;assembly=Syncfusion.Maui.Core"
    xmlns:viewmodels="clr-namespace:LocalizationTabii.ComponentModel"
    x:DataType="viewmodels:ChoosePromptViewModel">



    <ScrollView VerticalOptions="FillAndExpand">
        <StackLayout VerticalOptions="CenterAndExpand" Margin="20" Spacing="16">
            
            <!-- Ana zemin kartı - FileDragDropComponent ile tutarlılık -->
            <Border
                Padding="40"
                BackgroundColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkSurfaceColor}}"
                StrokeShape="RoundRectangle 24"
                Stroke="{AppThemeBinding Light={StaticResource Gray100}, Dark={StaticResource DarkBorderColor}}"
                StrokeThickness="2">
                
                <Border.Shadow>
                    <Shadow Brush="{AppThemeBinding Light={StaticResource Gray200}, Dark=Transparent}" 
                            Opacity="0.1" 
                            Radius="8" 
                            Offset="0,2" />
                </Border.Shadow>
            
                <StackLayout VerticalOptions="Center" Spacing="32">
            
            <!-- Başlık -->
            <StackLayout Spacing="20">
                <!-- Ana başlık -->
                <Label 
                    Text="Prompt Seçimi"
                    Style="{StaticResource Headline}"
                    FontSize="32"
                    FontAttributes="Bold"
                    HorizontalOptions="Center"
                    Margin="0,0,0,8" />

                <!-- Bilgi kartları - Responsive FlexLayout -->
                <FlexLayout 
                    Direction="Row" 
                    Wrap="Wrap" 
                    JustifyContent="Center" 
                    AlignItems="Center"
                    AlignContent="Center">
                    
                    <!-- Dosya bilgisi kartı -->
                    <Border 
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightAccentColor}, Dark={StaticResource DarkAccentColor}}"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        Padding="20,16"
                        Margin="8"
                        HeightRequest="70"
                        FlexLayout.Basis="280"
                        FlexLayout.Grow="0"
                        FlexLayout.Shrink="1">
                        
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                            <Border 
                                Grid.Column="0"
                                BackgroundColor="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}"
                                StrokeShape="RoundRectangle 12"
                                Padding="10"
                                VerticalOptions="Center">
                                <Image 
                                    Source="{StaticResource IconDocument24Regular}"
                                    WidthRequest="18"
                                    HeightRequest="18"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            </Border>
                            
                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label 
                                    Text="{Binding SelectedFileName}"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    LineBreakMode="MiddleTruncation"
                                    MaxLines="1" />
                                
                                <Label 
                                    Text="{Binding FileSize}"
                                    FontSize="12"
                                    TextColor="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource DarkTextSecondaryColor}}"
                                    Margin="0,-1,0,0" />
                            </StackLayout>
                        </Grid>
                    </Border>
                    
                    <!-- Süreç ikonu - Responsive görünürlük -->
                    <Image 
                        Source="{StaticResource IconArrowCircleRight24Regular}"
                        WidthRequest="24"
                        HeightRequest="24"
                        Margin="8,0"
                        FlexLayout.Order="1"
                        FlexLayout.Basis="24"
                        FlexLayout.Grow="0"
                        FlexLayout.Shrink="0">

                    </Image>

                    <!-- Model bilgisi kartı -->
                    <Border 
                        BackgroundColor="{AppThemeBinding Light={StaticResource SuccessLightColor}, Dark={StaticResource DarkAccentColor}}"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        Padding="20,16"
                        Margin="8"
                        HeightRequest="70"
                        FlexLayout.Order="2"
                        FlexLayout.Basis="280"
                        FlexLayout.Grow="0"
                        FlexLayout.Shrink="1">
                        
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                            <Border 
                                Grid.Column="0"
                                BackgroundColor="{StaticResource SuccessColor}"
                                StrokeShape="RoundRectangle 12"
                                Padding="10"
                                VerticalOptions="Center">
                                <Image 
                                    Source="{StaticResource IconSparkleInfo24Regular}"
                                    WidthRequest="18"
                                    HeightRequest="18"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            </Border>
                            
                            <Label 
                                Grid.Column="1"
                                Text="{Binding SelectedModelDisplayName}"
                                FontSize="15"
                                FontAttributes="Bold"
                                TextColor="{StaticResource SuccessColor}"
                                VerticalOptions="Center"
                                HorizontalOptions="Start" />
                        </Grid>
                    </Border>
                    
                    <!-- İkinci süreç ikonu - Prompt seçildiyse görünür -->
                    <Image 
                        Source="{StaticResource IconArrowCircleRight24Regular}"
                        WidthRequest="24"
                        HeightRequest="24"
                        Margin="8,0"
                        FlexLayout.Order="3"
                        FlexLayout.Basis="24"
                        FlexLayout.Grow="0"
                        FlexLayout.Shrink="0"
                        IsVisible="{Binding SelectedPrompt, Converter={StaticResource IsNotNullConverter}}">
                    </Image>

                    <!-- Prompt bilgisi kartı -->
                    <Border 
                        BackgroundColor="{AppThemeBinding Light={StaticResource LightPrimaryColor}, Dark={StaticResource DarkAccentColor}}"
                        StrokeShape="RoundRectangle 16"
                        Stroke="Transparent"
                        StrokeThickness="0"
                        Padding="20,16"
                        Margin="8"
                        HeightRequest="70"
                        FlexLayout.Order="4"
                        FlexLayout.Basis="280"
                        FlexLayout.Grow="0"
                        FlexLayout.Shrink="1"
                        IsVisible="{Binding SelectedPrompt, Converter={StaticResource IsNotNullConverter}}">
                        
                        <Grid ColumnDefinitions="Auto,*" ColumnSpacing="16">
                            <Border 
                                Grid.Column="0"
                                BackgroundColor="{StaticResource LightSecondaryColor}"
                                StrokeShape="RoundRectangle 12"
                                Padding="10"
                                VerticalOptions="Center">
                                <Image 
                                    Source="{StaticResource IconSparkleFilled}"
                                    WidthRequest="18"
                                    HeightRequest="18"
                                    HorizontalOptions="Center"
                                    VerticalOptions="Center" />
                            </Border>
                            
                            <StackLayout Grid.Column="1" Spacing="2" VerticalOptions="Center">
                                <Label 
                                    Text="{Binding SelectedPrompt.Title}"
                                    FontSize="15"
                                    FontAttributes="Bold"
                                    TextColor="{StaticResource LightSecondaryColor}"
                                    LineBreakMode="MiddleTruncation"
                                    MaxLines="1" />
                                
                                <Label 
                                    Text="{Binding SelectedPrompt.Language}"
                                    FontSize="12"
                                    TextColor="{AppThemeBinding Light={StaticResource White}, Dark={StaticResource DarkTextSecondaryColor}}"
                                    Margin="0,-1,0,0" />
                            </StackLayout>
                        </Grid>
                    </Border>
                    
                </FlexLayout>
            </StackLayout>

            <!-- İçerik alanı -->
            <StackLayout Spacing="24">
                <Label 
                    Text="Çeviri için kullanılacak prompt'u seçin veya özelleştirin:"
                    FontSize="17"
                    TextColor="{AppThemeBinding Light={StaticResource Gray600}, Dark={StaticResource DarkTextSecondaryColor}}"
                    HorizontalOptions="Center"
                    HorizontalTextAlignment="Center"
                    FontAttributes="Bold"
                    Margin="20,0" />


            </StackLayout>

            <!-- Alt butonlar - Responsive FlexLayout -->
            <FlexLayout 
                Direction="Row" 
                Wrap="Wrap" 
                JustifyContent="Center" 
                AlignItems="Center"
                AlignContent="Center"
                Margin="0,20,0,0">
                
                <!-- Geri dön butonu -->
                <buttons:SfButton 
                    Text="Geri Dön"
                    Command="{Binding GoBackCommand}"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="18"
                    WidthRequest="160"
                    HeightRequest="50"
                    Margin="6,6"
                    FlexLayout.Basis="160"
                    FlexLayout.Grow="0"
                    FlexLayout.Shrink="1">
                    
                    <buttons:SfButton.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}" Offset="0.0" />
                            <GradientStop Color="{AppThemeBinding Light={StaticResource Gray500}, Dark={StaticResource Gray500}}" Offset="1.0" />
                        </LinearGradientBrush>
                    </buttons:SfButton.Background>
                    
                    <buttons:SfButton.TextColor>White</buttons:SfButton.TextColor>
                    
                    <buttons:SfButton.Shadow>
                        <Shadow Brush="{AppThemeBinding Light={StaticResource Gray400}, Dark={StaticResource Gray600}}" Opacity="0.3" Radius="12" Offset="0,6" />
                    </buttons:SfButton.Shadow>
                </buttons:SfButton>
                
                <!-- Prompt seç butonu -->
                <buttons:SfButton 
                    Text="Prompt Seç"
                    Command="{Binding SelectPromptCommand}"
                    IsEnabled="{Binding IsSelectingPrompt, Converter={StaticResource InvertedBoolConverter}}"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="18"
                    WidthRequest="160"
                    HeightRequest="50"
                    Margin="6,6"
                    FlexLayout.Basis="160"
                    FlexLayout.Grow="0"
                    FlexLayout.Shrink="1">
                    
                    <buttons:SfButton.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="{StaticResource LightPrimaryColor}" Offset="0.0" />
                            <GradientStop Color="{StaticResource LightSecondaryColor}" Offset="1.0" />
                        </LinearGradientBrush>
                    </buttons:SfButton.Background>
                    
                    <buttons:SfButton.TextColor>White</buttons:SfButton.TextColor>
                    
                    <buttons:SfButton.Shadow>
                        <Shadow Brush="{StaticResource LightPrimaryColor}" Opacity="0.4" Radius="14" Offset="0,6" />
                    </buttons:SfButton.Shadow>
                </buttons:SfButton>
                
                <!-- Çeviriye başla butonu - Sadece prompt seçildiğinde görünür -->
                <buttons:SfButton 
                    Text="Çeviriye Başla"
                    Command="{Binding StartTranslationCommand}"
                    IsVisible="{Binding SelectedPrompt, Converter={StaticResource IsNotNullConverter}}"
                    FontSize="16"
                    FontAttributes="Bold"
                    CornerRadius="18"
                    WidthRequest="160"
                    HeightRequest="50"
                    Margin="6,6"
                    FlexLayout.Basis="160"
                    FlexLayout.Grow="0"
                    FlexLayout.Shrink="1">
                    
                    <buttons:SfButton.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#27AE60" Offset="0.0" />
                            <GradientStop Color="#2ECC71" Offset="1.0" />
                        </LinearGradientBrush>
                    </buttons:SfButton.Background>
                    
                    <buttons:SfButton.TextColor>White</buttons:SfButton.TextColor>
                    
                    <buttons:SfButton.Shadow>
                        <Shadow Brush="#27AE60" Opacity="0.4" Radius="14" Offset="0,6" />
                    </buttons:SfButton.Shadow>
                </buttons:SfButton>
            </FlexLayout>
            
                </StackLayout>
            </Border>
            
        </StackLayout>
    </ScrollView>
</ContentView> 